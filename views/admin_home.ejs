<%- include("templates/admin_header") %>

<div class="relative overflow-hidden bg-cover bg-no-repeat" style="
    background-position: 50%;
    background-image: url('/photos/home_bg.jpg');
    height: 895px;
    ">
<div
    class="absolute top-0 right-0 bottom-0 left-0 h-full w-full overflow-hidden bg-[hsla(0,0%,0%,0.75)] bg-fixed">
    <div class="flex h-full items-center justify-center">
        <div class="px-6 text-center text-white md:px-12">
            <h1 class="mt-2 mb-16 text-5xl font-bold tracking-tight md:text-6xl xl:text-7xl">
                MRAD Clinical Selection <br /><span>Admin</span>
            </h1>
            </div>
        </div>
    </div>
<div>
    <h1>Administrative Tools</h1>
</br>
    <form action="/admin-view-students" method="get">
        <div>
            <button type="submit" id="signup">View Students</button>
        </div>
    </form>
</br>
    <form action="/generate-code" method="post">
        <span>Current Code</span>
        <input type="text" id="code_display" value="<%= code %>" readonly>
        <button type="submit" id="generate" style="color: blue;">Generate Code</button>
    </form>

</br>

    <form action="/newIntake" method="post">
        <span>Current Intake</span>
        <input type="text" id="intake_display" value="<%= intake %>" readonly>
        <button type="submit" id="generate" style="color: blue;">New Intake</button>
    </form>
</div>

<%- include ("templates/footer") %>


