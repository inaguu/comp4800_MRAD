<%- include("templates/header") %>
<div class="flex items-center justify-center min-h-screen">
  <div class="bg-white overflow-hidden shadow rounded-lg border divide-y divide-gray-200">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">
        Admin View: User Profile
      </h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">
        Manage and view detailed information about the user.
      </p>
    </div>
    <div class="px-4 py-5 sm:p-0">
      <dl class="sm:divide-y sm:divide-gray-200">
        <!-- MRAD ID -->
        <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">
            MRAD ID
          </dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%- student.mrad_id %>
          </dd>
        </div>
        <!-- Forget Password Button -->
        <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">
            Password
          </dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2 text-right">
            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
              Reset Password
            </button>
          </dd>
        </div>
      </dl>
    </div>

  </div>
</div>
 <!-- student selection starts here -->
<div class="flex flex-col h-screen bg-gray-200">
    <div class="flex flex-col items-center justify-center px-4 py-5 sm:px-6 relative">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
            Selections
        </h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">
            You can change your info by clicking, editing, then hitting Save.
        </p>
    </div>
    <div class="m-auto w-full max-w-4xl p-4 bg-white shadow-lg rounded-lg">
        <h2 class="text-gray-700 font-bold mb-4">Your Selections</h2>

        <!-- new users list -->
        <div class="overflow-y-auto">
          <ul id="usersList">
            <!-- selections get listed here now -->
            <% if(student.choice_1_site_name) { %>
              <li class="selection-item">Choice 1: <%= student.choice_1_site_name %></li>
            <% } %>
            <% if(student.choice_2_site_name) { %>
              <li class="selection-item">Choice 2: <%= student.choice_2_site_name %></li>
            <% } %>
            <% if(student.choice_3_site_name) { %>
              <li class="selection-item">Choice 3: <%= student.choice_3_site_name %></li>
            <% } %>
            <% if(student.choice_4_site_name) { %>
              <li class="selection-item">Choice 4: <%= student.choice_4_site_name %></li>
            <% } %>
            <% if(student.choice_5_site_name) { %>
              <li class="selection-item">Choice 5: <%= student.choice_5_site_name %></li>
            <% } %>          
          </ul>
        </div>
    </div>
</div>
<%- include ("templates/footer") %>