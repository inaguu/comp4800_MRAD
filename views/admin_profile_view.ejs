            <span class="font-medium text-gray-700">Choice 1</span>
          </div>
          <div class="flex mt-2">
            <label class="inline-flex items-center ml-4">
              <span class="ml-2 text-gray-700">1. <%= student[0].Site1 %></span>
            </label>
            <label class="inline-flex items-center ml-4">
              <span class="ml-2 text-gray-700">2. <%= student[0].Site2 %></span>
            </label>
            <label class="inline-flex items-center ml-4">
              <span class="ml-2 text-gray-700">3. <%= student[0].Site3 %></span>
            </label>
          </div>
        </li>
        <% } %>

        <% if(student[1]) { %>
