<%- include("templates/admin_header") %>
<div class="flex items-center justify-center min-h-screen">
  <div class="bg-white overflow-hidden shadow rounded-lg border divide-y divide-gray-200">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">
        Admin View: User Profile
      </h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">
        Manage and view detailed information about the user.
      </p>
    </div>
    <div class="px-4 py-5 sm:p-0">
      <dl class="sm:divide-y sm:divide-gray-200">
        <!-- MRAD ID -->
        <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">
            MRAD ID
          </dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= student.MRAD_id %>

          </dd>
        </div>
        <!-- Forget Password Button -->
        <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">
            Password
          </dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2 text-right">
            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
              Reset Password
            </button>
          </dd>
        </div>
      </dl>
    </div>
    <pre>Scroll down for your clinical selections!</pre>
  </div>
</div>
<!-- clinical selection starts here -->
<div class="flex flex-col h-screen bg-gray-200">
  <div class="flex flex-col items-center justify-center px-4 py-5 sm:px-6 relative">
    <h3 class="text-lg leading-6 font-medium text-gray-900">Clinical Selections</h3>
    <p class="mt-1 max-w-2xl text-sm text-gray-500">
      Admin can make changes to the final clinical placement only.
    </p>
  </div>

  <!-- final placement starts here -->
  <div class="m-auto w-full max-w-4xl p-4 bg-white shadow-lg rounded-lg">
    <h2 class="text-gray-700 font-bold mb-4"><%= student[0].MRAD_id%>'s Final Clinical Placement</h2>
    <div class="overflow-y-auto">
      <ul>
        <% if(student[0]) { %>
          <li class="flex flex-col py-2 px-4 bg-gray-100 mt-2 rounded shadow-sm">
            <div class="flex mt-2">
              <label class="inline-flex items-center ml-4">
                <span class="ml-2 text-gray-700">Site 1: <%= student[0].Site1 %></span>
              </label>
              <label class="inline-flex items-center ml-4">
                <span class="ml-2 text-gray-700">Site 2: <%= student[0].Site2 %></span>
              </label>
              <label class="inline-flex items-center ml-4">
                <span class="ml-2 text-gray-700">Site 3: <%= student[0].Site3 %></span>
              </label>
            </div>
          </li>
          <% } %>
      </ul>
    </div>
  </div>


  <!-- test here -->

  <div class="m-auto w-full max-w-4xl p-4 bg-white shadow-lg rounded-lg">
    <h2 class="text-gray-700 font-bold mb-4"><%= student[0].MRAD_id%>'s Selection Choices</h2>

    <!-- Selections List -->
    <div class="overflow-y-auto">
      <ul id="usersList">
        <% if(student[0]) { %>
        <li class="flex flex-col py-2 px-4 bg-gray-100 mt-2 rounded shadow-sm">
          <div class="flex justify-between">
            <span class="font-medium text-gray-700">Choice 1</span>
          </div>
          <div class="flex mt-2">
            <label class="inline-flex items-center ml-4">
              <span class="ml-2 text-gray-700">1. <%= student[0].Site1 %></span>
            </label>
            <label class="inline-flex items-center ml-4">
              <span class="ml-2 text-gray-700">2. <%= student[0].Site2 %></span>
            </label>
            <label class="inline-flex items-center ml-4">
              <span class="ml-2 text-gray-700">3. <%= student[0].Site3 %></span>
            </label>
          </div>
        </li>
        <% } %>

        <% if(student[1]) { %>
        <li class="flex flex-col py-2 px-4 bg-gray-100 mt-2 rounded shadow-sm">
          <div class="flex justify-between">
            <span class="font-medium text-gray-700">Choice 2</span>
          </div>
          <div class="flex mt-2">
            <label class="inline-flex items-center ml-4">
              <span class="ml-2 text-gray-700">1. <%= student[1].Site1 %></span>
            </label>
            <label class="inline-flex items-center ml-4">
              <span class="ml-2 text-gray-700">2. <%= student[1].Site2 %></span>
            </label>
            <label class="inline-flex items-center ml-4">
              <span class="ml-2 text-gray-700">3. <%= student[1].Site3 %></span>
            </label>
          </div>
        </li>
        <% } %>

        <% if(student[2]) { %>
          <li class="flex flex-col py-2 px-4 bg-gray-100 mt-2 rounded shadow-sm">
            <div class="flex justify-between">
              <span class="font-medium text-gray-700">Choice 3</span>
            </div>
            <div class="flex mt-2">
              <label class="inline-flex items-center ml-4">
                <span class="ml-2 text-gray-700">1. <%= student[2].Site1 %></span>
              </label>
              <label class="inline-flex items-center ml-4">
                <span class="ml-2 text-gray-700">2. <%= student[2].Site2 %></span>
              </label>
              <label class="inline-flex items-center ml-4">
                <span class="ml-2 text-gray-700">3. <%= student[2].Site3 %></span>
              </label>
            </div>
          </li>
          <% } %>

          <% if(student[3]) { %>
            <li class="flex flex-col py-2 px-4 bg-gray-100 mt-2 rounded shadow-sm">
              <div class="flex justify-between">
                <span class="font-medium text-gray-700">Choice 4</span>
              </div>
              <div class="flex mt-2">
                <label class="inline-flex items-center ml-4">
                  <span class="ml-2 text-gray-700">1. <%= student[3].Site1 %></span>
                </label>
                <label class="inline-flex items-center ml-4">
                  <span class="ml-2 text-gray-700">2. <%= student[3].Site2 %></span>
                </label>
                <label class="inline-flex items-center ml-4">
                  <span class="ml-2 text-gray-700">3. <%= student[3].Site3 %></span>
                </label>
              </div>
            </li>
            <% } %>

            <% if(student[4]) { %>
              <li class="flex flex-col py-2 px-4 bg-gray-100 mt-2 rounded shadow-sm">
                <div class="flex justify-between">
                  <span class="font-medium text-gray-700">Choice 5</span>
                </div>
                <div class="flex mt-2">
                  <label class="inline-flex items-center ml-4">
                    <span class="ml-2 text-gray-700">1. <%= student[4].Site1 %></span>
                  </label>
                  <label class="inline-flex items-center ml-4">
                    <span class="ml-2 text-gray-700">2. <%= student[4].Site2 %></span>
                  </label>
                  <label class="inline-flex items-center ml-4">
                    <span class="ml-2 text-gray-700">3. <%= student[4].Site3 %></span>
                  </label>
                </div>
              </li>
              <% } %>
      </ul>
    </div>
  </div>
</div>

<!-- test here -->
</div>
</div>
<%- include ("templates/footer") %>